{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vite-vue2-ts-starter",
  "private": true,
  "version": "0.2.0",
  "description": "Vue2 TypeScript Startar project for Vite.",
  "author": {
    "name": "Logue",
    "email": "logue@hotmail.co.jp",
    "url": "https://logue.dev/"
  },
  "homepage": "https://github.com/logue/vite-vue2-ts-starter",
  "repository": {
    "type": "git",
    "url": "git@github.com:logue/vite-vue2-ts-starter.git"
  },
  "bugs": {
    "url": "https://github.com/logue/vite-vue2-ts-starter/issues"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "lint": "prettier --check . && eslint . --ext js,json,ts,yml,yaml,htm,html,vue --fix --cache",
    "lint:style": "prettier --check . && stylelint **/*.{css,sass,scss,vue} --fix --cache",
    "clean": "rimraf ./node_modules/.vite",
    "build": "vite build",
    "build:clean": "rimraf dist",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "dependencies": {
    "vue": "^2.6.14",
    "vue-class-component": "^7.2.6",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.5.3",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@amatlash/vite-plugin-stylelint": "^1.2.0",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vue/compiler-sfc": "^3.2.27",
    "@vue/eslint-config-typescript": "^10.0.0",
    "eslint": "^8.7.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-prettier-vue": "^3.1.0",
    "eslint-plugin-vue": "^8.3.0",
    "eslint-plugin-vuejs-accessibility": "^1.1.1",
    "eslint-plugin-yaml": "^0.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "postcss-html": "^1.3.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-vue": "^1.1.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "typescript": "^4.5.4",
    "vite": "^2.7.12",
    "vite-plugin-env-compatible": "^1.1.1",
    "vite-plugin-eslint": "^1.3.0",
    "vite-plugin-vue2": "^1.9.2",
    "vue-eslint-parser": "^8.0.1",
    "vue-template-compiler": "^2.6.14",
    "vue-tsc": "^0.30.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{vue,htm,html}": [
      "prettier --write",
      "eslint --fix",
      "stylelint --fix"
    ],
    "*.{js,ts,json,yml,yaml}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,sass,scss}": [
      "prettier --write",
      "stylelint --fix"
    ]
  }
}
